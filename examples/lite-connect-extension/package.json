{
  "name": "lite-connect-extension",
  "version": "0.0.1",
  "description": "Browser extension to manage substrate-based blockchain light clients",
  "main": "dist/src/index.js",
  "author": "Parity Technologies",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "prep": "mkdir -p dist && cp -r ./assets/icons ./dist && cp -r ./assets/chainspecs ./dist",
    "prep:m3": "pnpm prep && node scripts/generateManifest.js ./assets/manifest-v3.json ./dist/manifest.json",
    "prep:m2": "pnpm prep && node scripts/generateManifest.js ./assets/manifest-v2.json ./dist/manifest.json",
    "build": "pnpm build:m3 && pnpm build:m2",
    "build:m3": "pnpm clean && pnpm prep:m3 && concurrently \"pnpm:build-*\"",
    "build:m2": "pnpm clean && pnpm prep:m2 && concurrently \"pnpm:build-*\"",
    "build-content": "INPUT=content npx vite build --config vite.script.config.js",
    "build-background": "INPUT=background npx vite build --config vite.script.config.js",
    "build-ui": "vite build --config vite.ui.config.js",
    "dev": "pnpm dev:m3",
    "dev:m3": "pnpm clean && pnpm prep:m3 && concurrently \"pnpm:dev-*\"",
    "dev:m2": "pnpm clean && pnpm prep:m2 && concurrently \"pnpm:dev-*\"",
    "dev-content": "pnpm build-content --mode development --watch",
    "dev-background": "pnpm build-background --mode development --watch",
    "dev-ui": "pnpm build-ui --mode development --watch",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "vitest",
    "start": "web-ext run --source-dir ./dist -t chromium",
    "start:firefox": "web-ext run --source-dir ./dist -t firefox-desktop",
    "clean": "rm -rf dist",
    "deep-clean": "pnpm clean && rm -rf node_modules"
  },
  "keywords": [],
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "postcss": "^8.4.25",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "@polkadot-api/light-client-extension-helpers": "workspace:*",
    "@polkadot-api/substrate-client": "workspace:*",
    "@polkadot-api/utils": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "scale-ts": "^1.4.1",
    "smoldot": "2.0.7"
  }
}
