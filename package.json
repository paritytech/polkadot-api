{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "experiments"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test:ci",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.0.6",
    "husky": ">=6",
    "lint-staged": "^12.4.1",
    "prettier": "^3.0.1",
    "tslib": "^2.4.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "pnpm": {
    "overrides": {
      "smoldot": "2.0.6"
    }
  }
}
